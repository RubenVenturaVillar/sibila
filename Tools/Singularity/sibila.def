Bootstrap: docker
From:ubuntu:20.04
MirrorURL: http://us.archive.ubuntu.com/ubuntu/

%help
    This is a container for SIBILA engine.

%files
    ../../requirements.txt /opt/requirements.txt
    
%post
    apt-get update
    DEBIAN_FRONTEND=noninteractive apt-get -y install git python3.8 python3-pip python3-dev vim graphviz libreoffice
    apt-get clean
    pip3 install -r /opt/requirements.txt

%environment
    export LC_ALL=C

%labels
    Maintainer BIO-HPC
    Version    v1.0
